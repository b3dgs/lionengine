<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<lionengine:featurable xmlns:lionengine="http://lionengine.b3dgs.com/xsd/10" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://lionengine.b3dgs.com/xsd/10 http://lionengine.b3dgs.com/xsd/10/game/feature/featurable.xsd">
    <lionengine:class>com.b3dgs.lionengine.helper.EntityHelper</lionengine:class>
    <lionengine:features>
        <lionengine:feature>com.b3dgs.lionengine.tutorials.platform.c.EntityModel</lionengine:feature>
        <lionengine:feature>com.b3dgs.lionengine.helper.EntityInputController</lionengine:feature>
    </lionengine:features>
    <lionengine:surface image="Hero.png"/>
    <lionengine:frames horizontal="2" vertical="1" offsetY="-1"/>
    <lionengine:size width="24" height="24"/>
    <lionengine:origin>CENTER_BOTTOM</lionengine:origin>
    <lionengine:animations>
        <lionengine:animation name="idle" start="1" end="1" speed="0.125" repeat="false" reversed="false"/>
        <lionengine:animation name="walk" start="1" end="2" speed="0.25" repeat="true" reversed="false"/>
        <lionengine:animation name="turn" start="1" end="1" speed="0.125" repeat="false" reversed="false"/>
        <lionengine:animation name="jump" start="2" end="2" speed="0.25" repeat="false" reversed="false"/>
        <lionengine:animation name="fall" start="2" end="2" speed="0.25" repeat="false" reversed="false"/>
        <lionengine:animation name="die" start="2" end="2" speed="0.25" repeat="false" reversed="false"/>
    </lionengine:animations>
    <lionengine:collisions>
        <lionengine:collision name="default" width="20" height="20" offsetX="0" offsetY="0" mirror="false"/>
    </lionengine:collisions>
    <lionengine:categories>
        <lionengine:category name="rightBottom" axis="X" x="6" y="2" glue="false">
            <lionengine:group>block</lionengine:group>
        </lionengine:category>
        <lionengine:category name="leftBottom" axis="X" x="-7" y="2" glue="false">
            <lionengine:group>block</lionengine:group>
        </lionengine:category>
        <lionengine:category name="bottomRight" axis="Y" x="5" y="0" glue="false">
            <lionengine:group>block</lionengine:group>
        </lionengine:category>
        <lionengine:category name="bottomLeft" axis="Y" x="-6" y="0" glue="false">
            <lionengine:group>block</lionengine:group>
        </lionengine:category>
    </lionengine:categories>
    <lionengine:state>com.b3dgs.lionengine.tutorials.platform.c.StateIdle</lionengine:state>
    <lionengine:layerable layerRefresh="1" layerDisplay="1"/>
    <lionengine:collidable group="1" accepted="2"/>
